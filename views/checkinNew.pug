extends layout

block content
  h1 New Checkin
  form(id='new-checkin-form', action='/coffeeShop/new', method='post')
    p Choose a coffee shop:
    input(type='text', name='', placeholder='')
    br
    br
    p Rate the crowd:
    select(name='crowdRating')
      option(value='') * = Not Busy, ***** = VERY Busy)
      option(value='1') *
      option(value='2') **
      option(value='3') ***
      option(value='4') ****
      option(value='5') *****
    br
    br
    p Additional comments:
    input(type='text', name='comment', placeholder='comment')
    br
    br
    input(type='submit', value='Create Checkin')
  br
  a(href='/') Back
