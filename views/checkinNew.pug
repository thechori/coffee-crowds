extends layout

block content
  h1 New Checkin
  form(id='new-checkin-form', action='/newCheckin', method='post')
    p Choose a coffee shop:
    select(name='coffeeShop')
      option(value='')
      each coffeeShop in coffeeShops
        option(value='#{coffeeShop._id}') #{coffeeShop.name}
    br
    br
    p Rate the crowd:
    select(name='crowdRating')
      option(value='')
      option(value='1') * (Not Busy)
      option(value='2') **
      option(value='3') ***
      option(value='4') ****
      option(value='5') ***** (VERY Busy)
    br
    br
    p Additional comments:
    input(type='text', name='comment', placeholder='comment')
    br
    br
    input(type='submit', value='Create Checkin')
  br
  a(href='/') Back
